{
  "name": "r-ide",
  "displayName": "R-IDE",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:r-ide.helloWorld",
    "onCommand:r-ide.create-file-from-template"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ride-sidebar-view",
          "title": "R-IDE",
          "icon": "src/media/hubot.svg"
        }
      ]
    },
    "views": {
      "ride-sidebar-view": [
        {
          "type": "webview",
          "id": "sidebar-wizards",
          "name": "Wizards",
          "contextualTitle": "Wizards",
          "visibility": "visible",
          "initialSize": 3
        },
        {
          "type": "webview",
          "id": "sidebar-bags",
          "name": "ROS Bags",
          "contextualTitle": "ROS Bags",
          "visibility": "visible",
          "initialSize": 1
        },
        {
          "type": "webview",
          "id": "sidebar-visuals",
          "name": "Visualization Tools",
          "contextualTitle": "Visualization Tools",
          "visibility": "visible",
          "initialSize": 1
        },
        {
          "type": "webview",
          "id": "sidebar-topics",
          "name": "ROS Topics",
          "contextualTitle": "ROS Topics",
          "visibility": "visible",
          "initialSize": 1
        }
      ]
    },
    "commands": [
      {
        "command": "r-ide.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "r-ide.create-file-from-template",
        "title": "Create File From Template"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
